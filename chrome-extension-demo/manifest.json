{
    "manifest_version": 2,
    "name": "My First Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome Extension",
    "permissions": ["tabs", "http://*/*", "https://*/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }